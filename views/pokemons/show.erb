<h2>All Pokemons</h2>
<div class="pokemon">
  <p>Pokemon name: <%= @pokemon.name %></p>
  <p>Pokemon cp: <%= @pokemon.cp %></p>
  <p>Pokemon poke_type: <%= @pokemon.poke_type %></p>
  <img src="<%= @pokemon.img_url %>">
</div>

<div class="link_to_edit">
  <a href='/pokemons/<%= @pokemon.id %>/edit'>Edit This Pokemon</a>
</div>

<div class="link_to_delete">
<a href="/pokemons/<%= @pokemon.id %>/delete">Delete This Pokemon</a>
</div>
